{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@sperm-odyssey/shared": ["shared/src/index.ts"],
      "@sperm-odyssey/shared/*": ["shared/src/*"]
    }
  }
}
